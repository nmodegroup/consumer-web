image {
  width: 100%;
  height: 100%;
}
.dialog-block {
}
.shade-cover {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba( 0, 0, 0, 0.5);
  z-index: 1;
}
.qrcode-block {
  width: 580rpx;
  height: auto;
  position: fixed;
  left: 0;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  margin: auto;
  z-index: 2;
}
.qrcode-block::after{
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius:16rpx;
  backdrop-filter: blur(3rpx);
}
.qrcode-block__info {
  width: 100%;
  background:rgba(255,255,255,0.3);
  border-radius:16rpx;
  text-align: center;
  padding: 40rpx;
  box-sizing: border-box;
}
.swiper-block {
  width: 390rpx;
  height: 390rpx;
  margin: 40rpx auto 16rpx;
}
.qrcode-block__info__title{
  font-size: 30rpx;
  color:rgba(255,255,255,1);
}
.qrcode-block__info__tips {
  color:rgba(255,255,255,0.5);
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  
}
.qrcode-block__info__code {
  font-size:30rpx;
  color: rgba(255,255,255,0.7);
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.dot-block {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.dot-block__item {
  width: 20rpx;
  height: 20rpx;
  background:rgba(255,255,255,0.5);
  border-radius: 50%;
  margin-right: 20rpx;
}
.dot-block__item.active{
  background:rgba(255,255,255,1);
}