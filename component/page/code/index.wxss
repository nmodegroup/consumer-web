image {
  width: 100%;
  height: 100%;
}
.dialog-block {
}
.shade-cover {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba( 0, 0, 0, 0.5);
  z-index: 1;
}
.qrcode-block {
  width: 620rpx;
  height: auto;
  position: fixed;
  left: 0;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  margin: auto;
  z-index: 2;
  background:rgba(255,255,255,0.3);
  border-radius:16rpx;
}
.qrcode-block::after{
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius:16rpx;
  backdrop-filter: blur(3rpx);
}
.qrcode-block__info {
  width: 100%;
  min-height: 480rpx;
  max-height: 668rpx;
  border-radius:16rpx;
  text-align: center;
  padding: 40rpx 50rpx 180rpx;
  box-sizing: border-box;
}
.qrcode-block__info__title{
  height:42rpx;
  line-height:42rpx;
  font-size: 30rpx;
  color:rgba(255,255,255,1);
}
.qrcode-block__info__tips {
  color:rgba(255,255,255,0.5);
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
}
.qrcode-block__info__wrap{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.qrcode-block__info__wrap__item{
  font-size:30rpx;
  color:rgba(255,255,255,0.8);
  height: 60rpx;
  line-height: 60rpx;
}
.qrcode-block__info__wrap__item.over-item{
  color:rgba(255,255,255,0.5);
  text-decoration: line-through;
}

.code-btn{
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:rgba(255,255,255,1);
  border-radius:40rpx;
  color: #000;
  font-size: 30rpx;
  position: absolute;
  left: 50%;
  bottom: 40rpx;
  transform: translateX(-50%);
}
