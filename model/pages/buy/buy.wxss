/* pages/buy/buy.wxss */
image {
  width: 100%;
  height: 100%;
}
.buy-block {
  width: 100%;
  height: 100%;
  background-color: #15153E;
}
.banner-block {
  width: 100%;
  height: 360rpx;
  position: relative;
}
.shopping-info {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 140rpx;
  background-color:rgba(0,0,0,0.5);
  padding: 20rpx 30rpx 10rpx;
}
.title-block {
  font-size: 36rpx;
  height: 50rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tip-block {
  margin-top: 10rpx; 
  font-size: 24rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color:rgba(255,255,255,1);
}

.item-block {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.item-cell {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(255,255,255,0.5)
}
.item-cell__left {

}
.item-cell__left__label {
  color: #fff;
  font-size:28rpx;
}
.add-block {
  width: 166rpx;
  height: 54rpx;
  position: relative;
}
.add-block__stratum {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-block__stratum__btn {
  width: 45rpx;
  height: 100%;
}
.add-block__stratum__num {
  width: 76rpx;
  height: 100%;
  line-height: 54rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
  .item-cell__right__label {
    font-size: 28rpx;
    color: #fff;
  }
.item-cell__right__label.label-disabled {
  color: rgba(255,255,255,0.5);
}
.btn-bottom-frame {
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(115, 127, 194, 0.29);
  padding: 0 30rpx;
  backdrop-filter: blur(3px);
}
.reserve-frame {
  width:690rpx;
  height: 88rpx;
  background:linear-gradient(225deg,rgba(255,64,167,1) 0%,rgba(210,51,255,1) 45%,rgba(45,147,255,1) 100%);
  border-radius:38rpx;
  padding:2rpx;
  position: relative;
}
.btn-reserve{
  width:100%;
  height: 84rpx;
  background:rgba(69,80,138,1);
  border-radius: 36rpx;
  text-align: center;
  line-height: 84rpx;
  color:rgba(255, 255, 255, 1);
  font-size: 34rpx;
}