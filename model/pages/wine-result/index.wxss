/* model/pages/wine-result/index.wxss */
.poster-block {
  width: 100%;
  height: 100%;
}
.poster-block__main {
  padding: 24rpx 24rpx 32rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #15153E;
  position: relative;
}
.poster-block__bg {
  width: 100%;
  height: 100%
}
.poster-block__content{
  position: absolute;
  width: 608rpx;
  left: 71rpx;
  bottom: 118rpx;
}
.poster-block__content__result {
  position: relative;
  width: 608rpx;
  height: 242rpx;
}
.poster-block__content__bg {
  width: 100%;
  height: 100%;
}
.result-block {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color:rgba(255,255,255,1);
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.share-image,
.save-image {
  width: 274rpx;
  height: 80rpx;
}
.image-block {
  display: flex;
  justify-items: center;
  justify-content: space-between;
  padding: 0 22rpx;
  margin-top: 50rpx;
}
.result-block__item {
  font-size: 40rpx;
  line-height: 60rpx;
}
.btn-share {
  background-color: transparent!important;
  border: none!important;
  padding: 0!important;
  line-height: 0!important;
  margin: 0;
}
.canvas {
  width: 696px;
  height: 1262px;
  position: fixed;
  top: 9999rpx;
  left: 0;
}