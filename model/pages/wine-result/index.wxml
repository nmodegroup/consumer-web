<!--model/pages/wine-result/index.wxml-->
<view class="poster-block">
  <view class="poster-block__main">
    <image 
     src="/model/image/pic_poster.png"
     class="poster-block__bg"
    ></image>
    <view class="poster-block__content">
      <view class="poster-block__content__result">
        <image 
         src="/model/image/pic_word_kuang.png"
         class="poster-block__content__bg"
        ></image>
        <view class="result-block">
          <block wx:for="{{ textArr }}" wx:key="{{ index }}">
            <view class="result-block__item">{{ item }}</view>
          </block>
        </view>
      </view>
      <view class="image-block">
        <button open-type="share" class="btn-share">
          <image 
          src="/model/image/btn_share.png"
          class="share-image"
          ></image>
        </button>
        <image 
         src="/model/image/btn_save.png"
         class="save-image"
         bindtap="saveImage"
        ></image>
      </view>
    </view>
  </view>
    <!-- canvas ç»˜åˆ¶ -->
  <canvas canvas-id='myCanvas' class='canvas'></canvas>
  <Toast id="toast"></Toast>
  <modal id="modal" bind:get="getResult"></modal>
</view>