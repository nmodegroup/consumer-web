.book-container {
  background-color: rgba(21, 21, 62, 1);
  padding: 40rpx 30rpx 280rpx;
  min-height: 100%;
}
.date-title {
  color:rgba(255, 255, 255, .8);
  font-size:28rpx;
  padding-bottom: 20rpx;
}
.seat-content {
  padding: 30rpx 20rpx 0;
  background-color: rgba(0, 0, 0, .1);
  border-radius: 8rpx;
}
.seat-title {
  font-size: 24rpx;
  color:rgba(255, 255, 255, .8);
}
.flex{
  display: flex;
  padding-bottom: 30rpx;
  flex-wrap:wrap;
}
.seat-item {
  background-color: rgba(69, 106, 236, 1);
  height: 140rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  opacity: 0.5;
  width:202rpx;
  margin-right: 22rpx;
  margin-top: 12rpx;
}
.seat-item:nth-child(3n) {
  margin-right:0;
}
.seat-item:last-child{
  margin-right: 0;
}
.seat-item.disable{
  opacity: 0.2;
}
.seat-item.active{
  opacity: 1;
}
.seat-text {
  color:rgba(255, 255, 255, 1);
  font-size: 30rpx;
  font-weight: 500;
  padding-bottom: 18rpx;
}
.seat-num {
  height: 42rpx;
  border:1rpx solid rgba(255,255,255,1);
  line-height: 40rpx;
  text-align: center;
  font-size: 22rpx;
  color:rgba(255, 255, 255, 1);
  width:166rpx;
}
.book-info-frame {
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left:0;
  background-color: rgba(51, 57, 111, 1);
  padding: 22rpx 30rpx 16rpx;
}
.confirm-frame {
  width:690rpx;
  height: 88rpx;
  background:linear-gradient(225deg,rgba(255,64,167,1) 0%,rgba(210,51,255,1) 45%,rgba(45,147,255,1) 100%);
  border-radius:44rpx;
  padding:2rpx;
  position: relative;
}
.confirm-frame.disable{
  background: none;
  background-color: rgba(27, 33, 67, 0.62);
}
.btn-confirm{
  width:686rpx;
  height: 84rpx;
  background:rgba(69,80,138,1);
  border-radius: 42rpx;
  text-align: center;
  line-height: 84rpx;
  color:rgba(255, 255, 255, 1);
  font-size: 30rpx;
}
.btn-confirm.disable{
  background-color: rgba(27, 33, 67, 0.62);
  color:rgba(255, 255, 255, .2);
}
.vertical-line {
  width:2rpx;
  height: 30rpx;
  background-color: rgba(255, 255, 255, .8);
  margin: 0 30rpx;
}