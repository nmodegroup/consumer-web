.bar-container {
  background:#15153E;
  min-height: 100%;
}
.search-bar {
  padding: 20rpx 30rpx;
  border-top:1rpx solid rgba(255, 255, 255, .1);
  border-bottom:1rpx solid rgba(255, 255, 255, .1);
}
.bar-input {
  width:100%;
  height: 60rpx;
  border-radius:51rpx; 
  font-size: 28rpx;
  padding-left: 74rpx;
  color:#fff;
  background: rgba(35,35,89,1) url(data:image/png;base64,) no-repeat 26rpx center;
  background-size:28rpx 28rpx;
}
.select-bar {
  border-bottom:1rpx solid rgba(255, 255, 255, .1);
  height: 80rpx;
  display: flex;
  color: rgba(255,255,255,.6);
  font-size: 26rpx;
  position: relative;
}
.select-bar-title{
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 62rpx;
  position: relative;
}
.icon-bottom-arrow {
  width:16rpx;
  height: 12rpx;
  margin-left: 10rpx;
}
.bar-list-frame {
  padding: 0 30rpx 0 30rpx;
}
.bar-item {
  background:#0F0F2D;
}
.hot-bar-item {
  display: flex;
  height: 212rpx;
  padding: 32rpx 20rpx 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, .1)
}
.hot-bar-image {
  width:196rpx;
  height: 150rpx;
  border-radius: 8rpx;
}
.hot-bar-context {
  padding-left: 16rpx;
  flex: 1;
}
.hot-bar-context>view{
  display: flex;
  color:#fff;
  justify-content: space-between;
}
.hot-bar-context>view:nth-child(1){
  padding-bottom: 30rpx;
}
.hot-bar-text {
  font-size: 32rpx;
  font-weight: 500;
  color:rgba(255, 255, 255, .8);
}
.hot-bar-time {
  font-size: 24rpx;
  padding-left: 8rpx;
  color:rgba(255, 255, 255, .6);
  display: flex;
  align-items: top;
}
.hot-bar-adre {
  font-size: 24rpx;
  padding-left: 8rpx;
  color:rgba(255, 255, 255, .6);
  padding-top: 10rpx;
  display: flex;
  align-items: center;
}
.hot-bar-distance {
  font-size: 24rpx;
  padding-left: 8rpx;
  color:rgba(255, 255, 255, .6);
  padding-top: 10rpx;
}
.adre-text {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:280rpx;
}
.time-text {
  padding-right: 10rpx;
}
.time-text:last-child{
  padding-right: 0;
}
.time-text-frame {
  display: flex;
  flex-wrap:wrap;
  max-width: 300rpx;
}
.bar-order-info {
  padding:22rpx 18rpx 22rpx 20rpx;
}
.bar-info-text {
  display: flex;
  justify-content: space-between;
}
.bar-info-text>view{
  display: flex;
  color:rgba(255, 255, 255, .5);
  font-size: 24rpx;
}
.bar-info-text>view:first-child{
  padding-bottom: 22rpx;
}
.btn-full {
  background:rgba(218,73,255,1);
  border-radius:4rpx;
  font-size: 20rpx;
  padding: 0 8rpx;
  margin-right: 12rpx;
  line-height: 28rpx;
  height: 28rpx;
}
.bar-people-num {
  color:#fff;
  padding: 0 10rpx;
  font-weight: 500;
}
.btn-reserve {
  background:rgba(88,77,255,1);
  border-radius:4rpx;
  font-size: 20rpx;
  padding: 0 8rpx;
  margin-right: 12rpx;
  line-height: 28rpx;
  height: 28rpx;
}
.drop-down-box {
  padding-top: 20rpx;
  background:rgba(15,15,46,0.8);
  width:750rpx;
  position: absolute;
  top:80rpx;
  left:0;
  flex-direction: column;
  z-index: 1;
  padding-bottom: 20rpx;
}
.drop-down-item {
  height: 80rpx;
  text-align: center;
  position: relative;
  line-height: 80rpx;
}
.drop-down-item.active::after{
  content: '';
  width:750rpx;
  height: 1rpx;
  background: linear-gradient(to right, black , rgba(255, 255, 255, .5), black);
  position: absolute;
  top:0;
  left:0;
}
.drop-down-item.active::before{
  content: '';
  width:750rpx;
  height: 1rpx;
  background: linear-gradient(to right, black , rgba(255, 255, 255, .5), black);
  position: absolute;
  top:80rpx;
  left:0;
}
.rect-border {
  width:0; 
  height:0; 
  border-width:0 16rpx 16rpx; 
  border-style:solid; 
  border-color:transparent transparent rgba(255, 255, 255, .1); 
  position:absolute; 
  bottom:0; 
  left: 0;
  right:0;
  margin:auto;
}
.rect-content {
  width:0; 
  height:0; 
  border-width:0 15rpx 15rpx; 
  border-style:solid; 
  border-color:transparent transparent rgba(15,15,46,1); 
  position:absolute;
  left: -14rpx;
  top:1rpx;
}