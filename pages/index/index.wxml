<view class="container">
  <view class="swiper-box">
    <view class="swiper-location" bindtap="onSelAdre">深圳</view>
    <swiper indicator-dots="true" class="home-swiper" indicator-active-color="#F8FFF9" indicator-color="#857F89"
      autoplay="true" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="search-bar">
      <input class="search-input" placeholder="输入商户名、地点、找商家" placeholder-style="color:rgba(255, 255, 255, .6)"></input>
    </view>
  </view>
  <view class="context-box">
    <view class="booking-frame">
      <image class="bg-booking" src="/image/home_card_bg.jpg"></image>
      <view class="booking-bar-farme">
        <view class="booking-frame-l">
          <view class="booking-text">
            <view class="booking-name">深圳BBR酒吧</view>
            <view class="booking-info">
              8人
              <view class="vertical-line"></view>
              包房
            </view>
          </view>
          <view class="booking-btn">已预定</view>
        </view>
        <view class="booking-frame-r">
          <view class="booking-num">Y01</view>
          <view>预约码</view>
        </view>
      </view>
      <view class="booking-text-frame">
          <view>
            <view class="booking-time">到店时间：2019.5.23 20:00</view>
            <view class="booking-delay">超时时长：-分-秒
              <view class="booking-delay-tips">（超时30分钟自动取消）</view>
            </view>
          </view>
          <image class="right-arrow-1" src="/image/icon_right_arrow.svg"></image>
      </view>
    </view>
    <view class="hot-bar-title" bindtap="onBarList">
      <view>
        <image class="icon-hot" src="/image/icon_hot.svg"></image>
        <view class="hot-bar-text">人气酒吧</view>
      </view>
      <image class="right-arrow-2" src="/image/icon_right_arrow.svg"></image>
    </view>
    <view class="hot-bar-item">
      <image class="hot-bar-image" src="/image/bg-bar.png"></image>
      <view class="hot-bar-context">
        <view>
          <view class="hot-bar-text">深圳BBR酒吧</view>
          <view class="bar-btn-1">闹吧</view>
        </view>
        <view>
          <view class="hot-bar-time">
             <image class="icon-time" src="/image/icon_time.svg"></image>
              20:00-2:00
          </view>
        </view>
        <view>
          <view class="hot-bar-adre">
            <image class="icon-adre"  src="/image/icon_adre.svg"></image>
            深圳保利文化广场F3层
          </view>
          <view class="hot-bar-distance">1.9km</view>
        </view>
      </view>
    </view>
    <view class="hot-bar-item">
      <image class="hot-bar-image" src="/image/bg-bar.png"></image>
      <view class="hot-bar-context">
        <view>
          <view class="hot-bar-text">深圳BBR酒吧</view>
          <view class="bar-btn-2">清吧</view>
        </view>
        <view>
          <view class="hot-bar-time">
             <image class="icon-time" src="/image/icon_time.svg"></image>
              20:00-2:00
          </view>
        </view>
        <view>
          <view class="hot-bar-adre">
            <image class="icon-adre"  src="/image/icon_adre.svg"></image>
            深圳保利文化广场F3层
          </view>
          <view class="hot-bar-distance">1.9km</view>
        </view>
      </view>
    </view>
    <view class="hot-bar-title">
      <view>
        <image class="icon-hot" src="/image/icon_title_fujinjiuba.svg"></image>
        <view class="hot-bar-text">附近酒吧</view>
      </view>
      <image class="right-arrow-2" src="/image/icon_right_arrow.svg"></image>
    </view>
    <view class="hot-bar-item">
      <image class="hot-bar-image" src="/image/bg-bar.png"></image>
      <view class="hot-bar-context">
        <view>
          <view class="hot-bar-text">深圳BBR酒吧</view>
          <view class="bar-btn-2">闹吧</view>
        </view>
        <view>
          <view class="hot-bar-time">
             <image class="icon-time" src="/image/icon_time.svg"></image>
              20:00-2:00
          </view>
        </view>
        <view>
          <view class="hot-bar-adre">
            <image class="icon-adre"  src="/image/icon_adre.svg"></image>
            深圳保利文化广场F3层
          </view>
          <view class="hot-bar-distance">1.9km</view>
        </view>
      </view>
    </view>
    <view class="hot-bar-item">
      <image class="hot-bar-image" src="/image/bg-bar.png"></image>
      <view class="hot-bar-context">
        <view>
          <view class="hot-bar-text">深圳BBR酒吧</view>
          <view class="bar-btn-3">餐吧</view>
        </view>
        <view>
          <view class="hot-bar-time">
             <image class="icon-time" src="/image/icon_time.svg"></image>
              20:00-2:00
          </view>
        </view>
        <view>
          <view class="hot-bar-adre">
            <image class="icon-adre"  src="/image/icon_adre.svg"></image>
            深圳保利文化广场F3层
          </view>
          <view class="hot-bar-distance">1.9km</view>
        </view>
      </view>
    </view>
  </view>
  <van-popup show="{{selAdre}}" position="bottom" overlay-style="background:rgba(0,0,0,0.5)">
    <van-picker 
      columns="{{columns}}" 
      show-toolbar="true" 
      title="选择区域"  
      bind:change="onAdreChange"
      bind:confirm="onAdreConfirm"
      bind:cancel="onAdreCancel">
    </van-picker>
  </van-popup>
</view>