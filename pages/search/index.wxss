.search-container {
  background-color: rgba(21, 21, 62, 1);
  min-height: 100%;
  padding:30rpx 30rpx 0;
}
.input-bar{
  padding-bottom:60rpx;
  display: flex;
  align-items: center;
}
.search-input {
  width:614rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: rgba(35, 35, 89, 1);
  padding-left: 74rpx;
  font-size: 28rpx;
  color:rgba(255, 255, 255, 1);
}
.btn-search {
  color:rgba(255, 255, 255, .8);
  padding-left: 20rpx;
  font-size: 28rpx;
}
.history-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.history-bar>view{
  color:rgba(255, 255, 255, .8);
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
}
.icon_delete {
  width:30rpx;
  height: 30rpx;
}
.history-list{
  display: flex;
  flex-wrap: wrap;
  padding-top: 30rpx;
}
.history-item {
  padding: 0 30rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: rgba(30, 30, 79, 1);
  color:rgba(255, 255, 255, .8);
  font-size: 32rpx;
  line-height: 64rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.no-history-text {
  color:rgba(255, 255, 255, .5);
  font-size: 26rpx;
  text-align: center;
  padding-top: 50rpx;
}