.bar-detail-swiper {
  width:750rpx;
  height: 360rpx;
}
.slide-image {
  width:750rpx;
  height: 360rpx;
}
.bar-context {
  background-color: rgba(255, 255, 255, .05);
  padding: 20rpx 30rpx;
  backdrop-filter: blur(3px);
}
.icon-phone {
  width:40rpx;
  height: 40rpx;
}
.bar-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}
.bar-name {
  font-size: 44rpx;
  color:#fff;
  font-weight: 500;
  max-width:520rpx;
}
.bar-distance {
  color:rgba(255, 255, 255, .5);
  font-size: 24rpx;
}
.bar-price-frame {
  padding-bottom: 44rpx;
  display: flex;
}
.bar-price {
  color:rgba(255, 255, 255, .5);
  font-size: 24rpx;
  padding-left: 24rpx;
}
.bar-join-frame {
  background:rgba(0,0,0,.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 144rpx;
  border-radius: 8rpx;
  padding: 0 60rpx 0 30rpx;
}
.hot-bar-time {
  font-size: 30rpx;
  padding-left: 8rpx;
  color:rgba(255, 255, 255, .8);
  display: flex;
  align-items: center;
}
.icon-time {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}
.icon-adre {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}
.hot-bar-adre {
  font-size: 30rpx;
  padding-left: 8rpx;
  color:rgba(255, 255, 255, .8);
  padding-top: 16rpx;
  display: flex;
  align-items: center;
}
.vertical-line {
  padding-left: 64rpx;
  border-left:2rpx solid rgba(255, 255, 255, .1);
  display: flex;
  align-items: center;
  height: 68rpx;
}
.bar-booking-frame {
  margin-top: 20rpx;
  background-color: rgba(255, 255, 255, .05);
  backdrop-filter: blur(3px);
}
.bar-booking-head {
  padding: 0 32rpx;
  height: 88rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, .1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bar-booking-l {
  color:rgba(255, 255, 255, 1);
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  height: 88rpx;
}
.bar-booking-num {
  font-size: 24rpx;
  color:rgba(255, 255, 255, .5);
}
.icon-ding {
  width:30rpx;
  height: 30rpx;
  margin-right: 12rpx;
}
.bar-booking-body {
  padding-top:22rpx;
  padding-bottom: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid rgba(255, 255, 255, .1);
}
.bar-order {
  flex:1;
  display: flex;
  align-items: center;
}
.bar-booking-date {
  flex: 1;
  color:rgba(255, 255, 255, .5);
  text-align: center;
  position: relative;
}
.bar-booking-date.active > .booking-week{
  color:rgba(255, 255, 255, 1);
}
.bar-booking-date.active > .booking-date{
  color:rgba(255, 255, 255, 1);
}
.bar-booking-date.active::after{
  content: '';
  width:96rpx;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 2rpx;
  position: absolute;
  bottom:-28rpx;
  left:0;
  right:0;
  margin: auto;
}
.booking-week {
  font-size: 30rpx;
  padding-bottom: 4rpx;
}
.booking-date {
  font-size: 22rpx;
}
.date-vertical-line {
  width:2rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, .1);
}
.bar-booking-detail {
  height: 136rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}
.bar-booking-status {
  color:rgba(255, 255, 255, 1);
  font-size: 28rpx;
  padding-bottom: 6rpx;
}
.bar-booking-tips{
  color:rgba(255, 255, 255, .5);
  font-size: 22rpx;
}
.btn-booking{
  width:180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:rgba(255, 255, 255, 1);
  font-size: 24rpx;
  background:linear-gradient(225deg,rgba(255,64,167,1) 0%,rgba(210,51,255,1) 45%,rgba(45,147,255,1) 100%);
  border-radius:30rpx;
}
.bar-bartender-frame {
  padding-top:32rpx;
  padding-bottom: 40rpx;
  position: relative;
}
.scroll-view_H {
  height: 782rpx;
  text-align: center;
  white-space: nowrap;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-view-item{
  height: 782rpx;
}
.scroll-img-frame{
  display: inline-block;
  width: 572rpx;
  height: 782rpx;
  margin-left: 32rpx;
  border-radius: 8rpx;
  font-size: 0;
  position: relative;
}
.scroll-img-frame:last-child{
  margin-right: 32rpx;
}
.scroll-img-frame image{
  width: 572rpx;
  height: 782rpx;
  border-radius: 8rpx;
}
.bartender-name-frame {
  position: absolute;
  top:30rpx;
  left:30rpx;
  text-align: left;
}
.bartender-name-en,.bartender-name-ch{
  color:rgba(255, 255, 255, 1);
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: 500;
}
.bartender-name-ch{
  padding-top: 14rpx;
}
.bartender-intro {
  padding:18rpx 24rpx;
  width:572rpx;
  position: absolute;
  left:0;
  bottom:0;
  background-color: rgba(0, 0, 0, .5);
  color:rgba(255, 255, 255, .6);
  font-size: 28rpx;
  white-space: normal;
  line-height: 58rpx;
  text-align: left;
}
.bar-intro-frame {
  padding: 18rpx 30rpx 178rpx 30rpx;
}
.bar-intro-text {
  padding: 30rpx;
  background: rgba(0,0,0,.2);
  color:rgba(255, 255, 255, .5);
  line-height: 52rpx;
  font-size: 28rpx;
}
.btn-bottom-frame {
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(10, 10, 41, 0.7);
  backdrop-filter: blur(3px);
  padding-bottom: calc(env(safe-area-inset-bottom)/2);
}
.btn-bottom-frame>view,button{
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-1 {
  flex: 1;
}
.btn-bottom-frame image{
  width:50rpx;
  height: 50rpx;
}
.bar-detail-share {
  flex: 1;
  background-color: transparent;
}
.icon-confrim {
  width:64rpx;
  height: 64rpx;
}
.adre-text {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:446rpx;
}
.time-text {
  padding-right: 10rpx;
}
.time-text:last-child{
  padding-right: 0;
}

.remind-input {
  height: 72rpx;
  border:1rpx solid rgba(255, 255, 255, .2);
  border-radius: 36rpx;
  font-size: 26rpx;
  padding: 0 40rpx;
  color:rgba(255, 255, 255, .5);
}
.remind-tips-frame {
  padding-top: 20rpx;
}
.remind-tips-frame view{
  font-size: 20rpx;
  color:rgba(255, 255, 255, .5);
  line-height: 30rpx;
}
.bar-booking-tag {
  padding:0 10rpx;
  border:1rpx solid rgba(255,255,255,1);
  height: 32rpx;
  line-height: 32rpx;
  color:rgba(255, 255, 255, 1);
}
.bar-cancel-time {
  color:rgba(255, 255, 255, 1);
  padding-left:14rpx;
  padding-right: 4rpx;
}