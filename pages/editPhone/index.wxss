.phone-container {
  background-color: rgba(21, 21, 62, 1);
  height: 100%;
}
.step-frame {
  display: flex;
  padding: 60rpx 144rpx 0;
}
.step-1,.step-2 {
  width: 232rpx;
  height: 2rpx;
  background-color: rgba(255, 255, 255, .2);
  position: relative;
}
.step-1.active{
  background-color: rgba(190, 63, 204, 1);
}
.step-2.active{
  background-color: rgba(190, 63, 204, 1);
}
.step-1-block{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top:-10rpx;
  left:-10rpx;
}
.step-2-block{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top:-10rpx;
  right:-10rpx;
}
.circle-frame {
  width:22rpx;
  height: 22rpx;
  border-radius: 50%;
  background-color: #434364;
  display: flex;
  align-items: center;
  justify-content: center;
}
.circle-frame.active{
  background: linear-gradient(206deg, rgba(255,38,186,1), rgba(0,132,255,1));
}
.circle {
  width:16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #434364;
}
.circle.active{
  background-color: rgba(21, 21, 62, 1);
}
.step-tips {
  padding-top:20rpx;
  color:rgba(255, 255, 255, .3);
  font-size: 20rpx;
}
.step-tips.active{
  color:rgba(255, 255, 255, .8);
}
.input-frame {
  padding:158rpx 40rpx 0;
}
.input-group {
  display: flex;
  margin-bottom: 80rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, .5);
  padding-bottom: 18rpx;
  align-items: center;
}
.input-group input{
  font-size: 28rpx;
  flex: 1;
  color:rgba(255, 255, 255, 1);
}
.btn-code {
  color:rgba(104, 138, 255, 1);
  font-size: 26rpx;
}
.btn-bar {
  display: flex;
  justify-content: center;
  padding-bottom: 60rpx;
}
.btn-frame {
  background-color: rgba(112, 116, 152, 1);
  width:650rpx;
  height: 88rpx;
  padding: 2rpx;
  border-radius: 44rpx;
}
.btn-frame.active{
  background:linear-gradient(225deg, rgba(255,64,167,1), rgba(210,51,255,1), rgba(45,147,255,1));
}
.btn-confirm {
  background-color: #33396C;
  width:646rpx;
  height: 84rpx;
  border-radius: 42rpx;
  text-align: center;
  line-height: 84rpx;
  font-size: 34rpx;
  color:rgba(255, 255, 255, .3);
  font-weight: 500;
}
.btn-confirm.active{
  color:rgba(255, 255, 255, 1);
}
.code-tips {
  color:rgba(255, 255, 255, .5);
  font-size: 24rpx;
  text-align: center;
  line-height: 34rpx;
}