<wxs module="filter" src="../../filter/filter.wxs"></wxs>
<view class="order-container">
  <view wx:for="{{list}}" wx:key="{{index}}">
    <view class="order-time-title">下单时间：{{item.appointTime}}</view>
    <view class="order-item" bindtap="onBarDetail" data-id="{{item.mid}}">
      <view class="order-header">
        <view class="bar-info">
          <view class="bar-name">{{item.name}}</view>
          <view class="order-status" wx:if="{{item.status}}">{{item.status == 1 ? '自己取消' : '系统取消'}}</view>
          <view class="order-status" wx:if="{{!item.status}}">已有{{item.num}}设置提醒</view>
        </view>
        <view class="room-info">
          <view>{{item.remindStatus == 1 ? '已提醒' : '未提醒'}}</view>
        </view>
      </view>
      <view class="order-body">
        <view>
          <view class="go-time">提醒日期：{{item.remindTime}}</view>
          <view class="delay-time">系统在{{item.redoTime}}取消</view>
        </view>
        <view class="cancel-frame" wx:if="{{item.status == 0}}">
          <view class="btn-cancel" bindtap="onCancel" data-id="{{item.id}}">取消提醒</view>
        </view>
      </view>
    </view>
  </view>
  <Toast id="toast"></Toast>
  <modal id="modal" bind:get="getResult"></modal>
  <button wx:if="{{moreBtn}}"  type="primary" plain="true" loading="true">正在载入更多...</button>
  <button wx:if="{{noMoreBtn}}"  type="primary" plain="true">没有更多了</button>
</view>