.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* height: 98rpx; */
  background:rgba(10,10,41,0.7);
  backdrop-filter: blur(3px);
  display: flex;
  padding-bottom: calc(env(safe-area-inset-bottom)/2);
  box-sizing: content-box;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* .tab-bar-item image {
